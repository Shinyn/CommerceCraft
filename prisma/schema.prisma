generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Product {
  id          String @id
  title       String
  description String
  price       Int
  image       String
}

model Category {
  id    String @id
  title String
}

model Billboard {
  id     String @id
  text   String
  image  String
  active Int    @default(0)
}
