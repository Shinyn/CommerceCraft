generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Stores {
  id String @id @default(uuid())
  user_id String
  name String
}

model Product {
  id          String @id @default(uuid())
  title       String
  description String
  price       Int
  image       String
  category    String
}

model Category {
  id    String @id @default(uuid())
  title String
}

model Billboard {
  id     String @id @default(uuid())
  text   String
  image  String
  active Int    @default(0)
}
